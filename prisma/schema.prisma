generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  name String?
  company String
  category String
  banners Banner[]
}

model Banner {
  id Int @id 
  title String
  description String?
  link String
  author User @relations(fields: [authorId], references: [id])
  authorId Int
  prompt Prompt @relations(fields: [promptId], references: [id])
}

model Prompt {
  id Int @id
  title String?
  description String?
  color_pallete String?
  theme String?
  eg_images String[]
  author User @relations(fields: [authorId], references: [id])
  authorId Int
  banners Banner[]
}
